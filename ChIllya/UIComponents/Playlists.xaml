<?xml version="1.0" encoding="utf-8" ?>
<ContentView xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="ChIllya.UIComponents.Playlists"
             xmlns:controls="clr-namespace:ChIllya.UIComponents"
             xmlns:model="clr-namespace:ChIllya.Models">
    <ContentView.ControlTemplate>
        <ControlTemplate>
            <CollectionView BindingContext="{Binding Source={RelativeSource TemplatedParent}}"
                            ItemsSource="{Binding ItemsSource}">
                <CollectionView.ItemTemplate>
                    <DataTemplate>
                        <Border Stroke="Transparent" Margin="0, 0, 0, 10">
                            <Border.StrokeShape>
                                <RoundRectangle CornerRadius="15"></RoundRectangle>
                            </Border.StrokeShape>
                            <Border.Background>
                                <LinearGradientBrush EndPoint="1,0">
                                    <GradientStop Color="{StaticResource Pink}" Offset="0.0"></GradientStop>
                                    <GradientStop Color="{StaticResource LightPink}" Offset="1.0"></GradientStop>
                                </LinearGradientBrush>
                            </Border.Background>
                            <Grid Padding="15, 10">
                                <Label Text="{Binding Name}"
                                       TextColor="Black">
                                </Label>
                            </Grid>
                        </Border>
                    </DataTemplate>
                </CollectionView.ItemTemplate>
            </CollectionView>
        </ControlTemplate>
    </ContentView.ControlTemplate>
</ContentView>